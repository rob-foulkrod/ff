---
interface FamilyMember {
  name: string;
  username: string;
  role?: string;
  dad?: string;
}

interface FamilyTree {
  dads: FamilyMember[];
  sons: FamilyMember[];
}

interface Props {
  familyTree: FamilyTree;
}

const { familyTree } = Astro.props;
const { dads = [], sons = [] } = familyTree || {};
